<launch>

  <!-- initialization-->
   
  <include file="$(find ucar_controller)/launch/base_driver.launch" > </include>

  <include file="$(find ydlidar)/launch/ydlidar.launch" > </include>

	 <!-- ************** Navigation ***************  -->
	<node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
  	  	<rosparam file="$(ucar_nav)/launch/config/omnidir/costmap_common_params.yaml" command="load" ns="global_costmap" />
  	 	<rosparam file="$(ucar_nav)/launch/config/omnidir/costmap_common_params.yaml" command="load" ns="local_costmap" />
  		<rosparam file="$(ucar_nav)/launch/config/omnidir/local_costmap_params.yaml" command="load" />
  		<rosparam file="$(ucar_nav)/launch/config/omnidir/global_costmap_params.yaml" command="load" />
  		<rosparam file="$(ucar_nav)/launch/config/omnidir/teb_local_planner_params.yaml" command="load" />

		<param name="base_global_planner" value="global_planner/GlobalPlanner" />
		<param name="planner_frequency" value="1.0" />
		<param name="planner_patience" value="5.0" />

		<param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
		<param name="controller_frequency" value="5.0" />
		<param name="controller_patience" value="15.0" />
	</node>


	<!--  ****** Maps *****  -->
	<node name="map_server" pkg="map_server" type="map_server" args="$(find ucar_nav)/maps/mymap.yaml" output="screen">
                <param name="frame_id" value="map"/>
	</node>

	<!--  ************** AMCL ***************  -->
	<node pkg="amcl" type="amcl" name="amcl" output="screen">
		<rosparam file="$(find ucar_nav)/launch/config/amcl/amcl_omni.launch" command="load" />

 		<!-- We have a holonomic robot! Overwrite yaml config here! -->
                <param name="odom_model_type"		value="omni"/>
   
	        <param name="initial_pose_x"            value="2"/>
		<param name="initial_pose_y"            value="2"/>
		<param name="initial_pose_a"            value="0"/>
	</node>


</launch>
